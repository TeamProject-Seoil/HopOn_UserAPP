<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#3A8DFF" />  <!-- 파란색 외곽선 -->

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 안쪽 여백 -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
