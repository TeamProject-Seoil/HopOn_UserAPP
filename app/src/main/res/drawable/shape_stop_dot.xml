<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 바깥 원: 흰색 채움 + 테두리 (여기 테두리 색을 코드에서 바꿀 거임) -->
    <item android:id="@+id/dot_outer">
        <shape android:shape="oval">
            <size android:width="14dp" android:height="14dp"/>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#3478F6"/> <!-- 기본값, 코드에서 덮어씀 -->
        </shape>
    </item>

    <!-- 안쪽 원: 안 채움(흰색) 유지 or 필요 시 색 변경 -->
    <item
        android:id="@+id/dot_inner"
        android:top="3dp" android:bottom="3dp"
        android:left="3dp" android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>
