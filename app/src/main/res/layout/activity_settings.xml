<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@id/card_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ===== 상단 바 ===== -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="#4B93FF"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageButton
                android:id="@+id/btn_back_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="뒤로가기"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/setting_animation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="설정"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ===== 계정 정보 카드 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:text="계정 정보"
            android:textColor="#888888"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/card_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <!-- 로그인 유도 -->
            <LinearLayout
                android:id="@+id/section_login"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="로그인 해주세요."
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <!-- 로그인 상태 (필요시 VISIBLE) -->
            <LinearLayout
                android:id="@+id/view_logged_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/circle_mask"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조건희"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="전화번호"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="010-1234-5678"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="이메일"
                        android:textColor="#888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdf1234@gmail.com"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="계정 정보 수정"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 구분 띠 (풀-블리드) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F6F8" />

        <!-- ===== 앱 정보 카드 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="앱 정보"
            android:textColor="#9AA1A9"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/btn_terms_privacy"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="약관 및 개인정보"
                    android:textColor="#111111"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"
                app:thickness="1dp"
                app:dividerColor="#EEEEEE" />

            <LinearLayout
                android:id="@+id/rowVersion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="버전 정보"
                    android:textColor="#111111"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvVersionRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신 버전 v1.0.0"
                    android:textColor="#9AA1A9"
                    android:textSize="13sp"
                    android:paddingEnd="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 구분 띠 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F6F8" />

        <!-- ===== 알림 카드 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="알림"
            android:textColor="#9AA1A9"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공지사항 알림 수신 여부"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"
                app:thickness="1dp"
                app:dividerColor="#EEEEEE" />

            <LinearLayout
                android:id="@+id/btn_bus_boarding"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="버스 승차 알림 (N분 전 안내)"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"
                app:thickness="1dp"
                app:dividerColor="#EEEEEE" />

            <LinearLayout
                android:id="@+id/btn_bus_alighting"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="버스 하차 알림 (N정거장 전 안내)"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 구분 띠 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F6F8" />

        <!-- ===== 서비스 카드 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="서비스"
            android:textColor="#9AA1A9"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/btn_auto_refresh"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자동 새로고침 주기"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"
                app:thickness="1dp"
                app:dividerColor="#EEEEEE" />

            <LinearLayout
                android:id="@+id/btn_arrival_display_criteria"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="버스 도착정보 노출 기준"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="0dp"
                app:dividerInsetEnd="0dp"
                app:thickness="1dp"
                app:dividerColor="#EEEEEE" />

            <LinearLayout
                android:id="@+id/btn_arrival_text_color"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="버스 도착정보 텍스트 색상"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 구분 띠 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F6F8" />

        <!-- ===== 고객 지원(문의) 카드 — 하단 배치 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:text="고객 지원"
            android:textColor="#9AA1A9"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/btn_app_inquiry"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="문의"
                    android:textColor="#111111"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/chevron_right"
                    app:tint="#C0C5CC"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 섹션 구분 띠 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F4F6F8" />

        <!-- ===== 회원 탈퇴 (로그인 시) ===== -->
        <LinearLayout
            android:id="@+id/btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="회원 탈퇴"
                android:textSize="16sp"
                android:textColor="#D32F2F"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#D32F2F" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
