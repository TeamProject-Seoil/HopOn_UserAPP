<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 헤더: 설정 화면과 동일 톤/크기 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#4285F4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="뒤로"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="약관 및 개인정보"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 이용약관 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HopOn 서비스 이용 약관"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="18sp"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="본 약관은 HopOn(이하 ‘회사’)이 제공하는 버스 정보·예약 등 관련 서비스(이하 ‘서비스’)의 이용과 관련하여 회사와 이용자 간 권리·의무 및 책임사항을 규정합니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="14dp"
                android:background="#EEEEEE"/>

            <!-- 제1조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제 1 조 (목적)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="이 약관은 이용자가 회사가 제공하는 서비스의 이용 조건 및 절차, 회사와 이용자의 권리·의무와 책임사항을 명확히 함을 목적으로 합니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 제2조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="제 2 조 (용어의 정의)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="① ‘서비스’란 회사가 제공하는 버스 정류장/노선 정보, 도착 안내, 예약 및 알림 서비스 일체를 의미합니다.\n② ‘이용자’란 본 약관에 동의하고 서비스를 이용하는 회원 및 비회원을 말합니다.\n③ 그 외 용어는 관계 법령 및 서비스 안내에서 정하는 바에 따릅니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 제3조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="제 3 조 (약관의 효력 및 변경)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="① 본 약관은 서비스 화면에 게시하거나 기타 방법으로 공지함으로써 효력이 발생합니다.\n② 회사는 관련 법령을 위배하지 않는 범위에서 약관을 개정할 수 있으며, 변경 사항은 공지 후 적용됩니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 제4조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="제 4 조 (회원 가입 및 계정)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="① 이용자는 회사가 정한 절차에 따라 회원 가입을 신청하고, 회사가 이를 승낙함으로써 회원이 됩니다.\n② 회원은 계정 정보를 안전하게 관리할 책임이 있으며, 제3자에게 양도·대여할 수 없습니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 제5조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="제 5 조 (서비스의 제공 및 변경)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="① 회사는 운행 정보 제공, 예약/알림 등 다양한 기능을 제공합니다.\n② 회사는 운영상·기술상 필요에 따라 서비스의 내용을 변경할 수 있으며, 중요한 변경의 경우 사전 공지합니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 제6조 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="제 6 조 (이용자의 의무)"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="① 법령, 약관, 공지 및 서비스 안내에서 정한 사항을 준수해야 합니다.\n② 타인의 정보를 도용하거나 서비스 운영을 방해하는 행위를 해서는 안 됩니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#EEEEEE"/>

            <!-- 개인정보 처리방침 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 처리방침"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="18sp"
                android:paddingBottom="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회사는 이용자의 개인정보를 관련 법령과 내부 정책에 따라 안전하게 처리합니다. 주요 내용은 아래와 같습니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <!-- 항목/목적/보관 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="1) 수집 항목 및 수집 방법"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="회원 가입 및 서비스 이용 과정에서 ▷이름, 연락처, 이메일, 기기정보(클라이언트 유형/디바이스 ID) ▷선택: 회사명, 프로필 이미지 등을 수집할 수 있습니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="2) 이용 목적"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="본인 식별·인증, 서비스 제공 및 예약/알림 처리, 고객 문의 대응, 부정 이용 방지, 공지사항 전달 등에 활용됩니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="3) 보관 및 파기"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="관련 법령에서 정한 기간 또는 이용 목적 달성 시까지 보관하며, 보관기간 종료 시 안전한 방법으로 즉시 파기합니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="4) 이용자의 권리"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="이용자는 언제든 개인정보 열람·정정·삭제·처리정지 등을 요청할 수 있으며, 회사는 지체 없이 조치합니다."
                android:textColor="#444444"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
