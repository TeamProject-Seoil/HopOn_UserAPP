<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 헤더 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#4285F4"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="28dp"
        android:paddingBottom="12dp">

        <ImageButton
            android:id="@+id/notice_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="문의 작성"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 이름 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                android:hint="이름(필수)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이메일: 아이디 @ 도메인 (한 줄) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email_local"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundMode="outline"
                    android:hint="아이디">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email_local"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email_domain"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundMode="outline"
                    android:hint="도메인 (예: gmail.com)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- 도메인 선택 (한 줄 아래) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email_domain_dd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:hint="도메인 선택">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/dd_email_domain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 제목 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                android:hint="제목(필수)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_title"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 내용 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:boxBackgroundMode="outline"
                android:hint="내용(필수)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀글 스위치 -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/sw_secret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="비밀글로 등록"
                android:textSize="14sp" />

            <!-- 비밀번호 (비밀글일 때만 표시) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundMode="outline"
                android:hint="비밀번호(4~64자)"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 첨부 -->
            <TextView
                android:id="@+id/btn_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 첨부파일 추가"
                android:textColor="#1A73E8"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <LinearLayout
                android:id="@+id/chip_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

    <!-- 하단 액션 -->
    <!-- 하단 액션: 버튼 풀폭 + 중앙 스피너 오버레이 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="16dp"
            android:text="작성"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="#4285F4"
            app:rippleColor="#33FFFFFF"
            app:cornerRadius="12dp"/>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>


</LinearLayout>
