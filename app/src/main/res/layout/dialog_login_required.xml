<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 헤더 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="12dp">

            <!-- 타이틀 위에 작은 라벨 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipLoginRequired"
                style="@style/Widget.Material3.Chip.Assist.Elevated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 필요"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                app:chipStrokeWidth="1dp"
                app:chipStrokeColor="?attr/colorOutline"
                app:chipIcon="@drawable/ic_login_24"
                app:chipIconTint="?attr/colorOnSecondaryContainer"
                app:chipIconVisible="true"
                app:chipCornerRadius="10dp"
                app:chipMinHeight="28dp"
                app:rippleColor="?attr/colorSecondary" />

            <!-- 제목 -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인이 필요해요"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="8dp"
                android:paddingBottom="2dp" />

            <!-- 추가된 안내 문구 -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="해당 서비스를 이용하시려면 로그인이 필요합니다."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:paddingTop="2dp"
                android:paddingBottom="6dp" />

            <!-- 포인트 안내(옵션) -->
            <LinearLayout
                android:id="@+id/groupPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 최근 예약 빠른 재사용"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:paddingTop="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 즐겨찾기 동기화"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:paddingTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 구분선 -->
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="?attr/colorOutlineVariant" />

        <!-- 하단 액션 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <!-- 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/MyOutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="나중에"
                    app:cornerRadius="14dp"
                    app:strokeColor="?attr/colorOutline" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOk"
                    style="@style/MyFilledButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="로그인하기"
                    app:cornerRadius="14dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
