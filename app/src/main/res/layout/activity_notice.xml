<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <!-- 헤더 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="#4285F4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="28dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/notice_back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="뒤로가기"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:id="@+id/notice_title_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_notice"
                    app:tint="#FFFFFFFF"/>

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- 1차 필터: 유형 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/filter_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_filter_blue"
                    android:text="전체(0)"
                    android:textColor="#1A73E8"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_info"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_filter_white"
                    android:text="공지(0)"
                    android:textColor="#222222"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_filter_white"
                    android:text="업데이트(0)"
                    android:textColor="#222222"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_maint"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_filter_white"
                    android:text="점검(0)"
                    android:textColor="#222222"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 2차 필터: 읽음/안읽음  (로그인 X면 통째로 GONE) -->
        <HorizontalScrollView
            android:id="@+id/read_filter_scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/read_filter_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_read_all"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_filter_blue_soft"
                    android:text="전체(0)"
                    android:textColor="#1A73E8"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_read_only"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_filter_white"
                    android:text="읽음(0)"
                    android:textColor="#222222"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>

                <Space android:layout_width="8dp" android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btn_unread_only"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_filter_white"
                    android:text="안읽음(0)"
                    android:textColor="#222222"
                    android:minWidth="72dp"
                    android:paddingHorizontal="14dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"/>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
