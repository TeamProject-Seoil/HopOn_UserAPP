<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#4B93FF"
            android:paddingTop="24dp">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/registerButtonBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"/>

            <!-- 타이틀 -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 본문 입력 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 아이디 + 중복확인 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="아이디">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCheckId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중복확인"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#4B93FF"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- 비밀번호 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                app:endIconMode="password_toggle"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 확인 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                app:endIconMode="password_toggle"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPwConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 제약조건 -->
            <TextView
                android:id="@+id/textPasswordHint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호는 10~16자, 영문/숫자 조합, 공백 불가"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textPasswordHint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="영문 대문자, 소문자, 숫자 중 2종류 혼합(특수문자 불가)"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/textPasswordHint3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3자리 연속된 키보드 상 문제, 숫자열은 제한"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>

            <!-- 이름 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이메일 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="이메일 아이디">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"/>

                <!-- 도메인 선택 영역 -->
                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <!-- 스피너 -->
                    <Spinner
                        android:id="@+id/spinner_email_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp" />

                    <!-- 직접 입력 영역 -->
                    <LinearLayout
                        android:id="@+id/custom_domain_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/editTextDomainCustom"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="도메인 입력"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/edittext_outline"/>

                        <ImageButton
                            android:id="@+id/btn_back_to_spinner"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:background="@android:color/transparent"
                            android:contentDescription="스피너로 돌아가기"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- 인증 메일 발송 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증 메일 발송"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:backgroundTint="#4B93FF"
                android:textColor="@android:color/white"/>

            <!-- 남은 시간 -->
            <TextView
                android:id="@+id/textEmailTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남은 시간: -"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <!-- 인증 코드 입력 + 확인 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="인증코드">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#4B93FF"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- 전화번호 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 회원가입 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubmitRegister"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="회원가입"
                android:layout_marginTop="20dp"
                android:backgroundTint="#4B93FF"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
