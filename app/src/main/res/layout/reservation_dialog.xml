<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:elevation="6dp">

    <!-- 상단 버스 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 버스 아이콘 -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/hopon_new_icon"
            />

        <!-- 버스 번호와 방향 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBusNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvBusDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방면 정보"
                android:textSize="14sp"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- 즐겨찾기 버튼 -->
        <ImageView
            android:id="@+id/btnFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_star2" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- 승차 정보 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioBoarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승차"
            android:textSize="16sp"
            android:textColor="#000000"
            android:buttonTint="#4285F4" />

        <!-- API로 채울 승차 정류장 -->
    </RadioGroup>

    <!-- 하차 정보 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radioDropOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차"
            android:textSize="16sp"
            android:textColor="#000000"
            android:buttonTint="#4285F4" />

        <!-- API로 채울 하차 정류장 -->
    </RadioGroup>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="8dp" />

    <!-- 알림 옵션 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 받을 이벤트 선택"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <CheckBox
        android:id="@+id/checkBoardingAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승차 알림"
        android:buttonTint="#4285F4"
        android:textColor="#444444"/>

    <CheckBox
        android:id="@+id/checkDropOffAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하차 알림"
        android:buttonTint="#4285F4"
        android:textColor="#444444"
        android:layout_marginBottom="12dp"/>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#5F5F5F"
            android:elevation="4dp"
            android:text="취소"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnReserve"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            android:text="예약하기"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
