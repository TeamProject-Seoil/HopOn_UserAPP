<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top_background"
    android:padding="16dp">


    <!-- 상단: 닫기 버튼 -->
    <ImageButton
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="닫기"
        app:srcCompat="@drawable/exit_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 정류장 이름 -->
    <TextView
        android:id="@+id/text_station_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="정류장 이름"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exit_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"/>

    <!-- 도착정보 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bus_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_ars_id"
        app:layout_constraintBottom_toBottomOf="parent" />
<!--정류장 이름 아래 arsid-->
    <TextView
        android:id="@+id/text_ars_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARS 00000"
        android:textColor="#888888"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/text_station_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- 새로고침 버튼 (오른쪽 아래) -->
    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="새로고침"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/refresh_button" />    <!-- RV 위로 뜨게 -->

</androidx.constraintlayout.widget.ConstraintLayout>
