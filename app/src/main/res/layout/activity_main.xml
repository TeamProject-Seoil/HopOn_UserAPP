<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <!-- 메인 콘텐츠: CoordinatorLayout으로 변경 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.naver.maps.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="메뉴 버튼"
            android:scaleType="fitCenter"
            android:src="@drawable/menu"
            android:layout_gravity="top|start" />

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="106dp"
            android:background="@android:color/transparent"
            android:contentDescription="즐겨찾기 버튼"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_star"
            android:layout_gravity="top|start" />

        <FrameLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="true"
            app:layout_behavior="com.example.testmap.util.CustomBottomSheetBehavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp">

            <include layout="@layout/reservation_bottomsheet" />

        </FrameLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- 사이드 메뉴 -->
    <FrameLayout
        android:id="@+id/menu_section"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF">

        <!-- 메뉴 -->
        <include
            android:id="@+id/activity_menu"
            layout="@layout/activity_menu"
            android:visibility="gone" />

        <!-- 즐겨찾기 -->
        <include
            android:id="@+id/activity_favorites"
            layout="@layout/activity_favorites_and_recent"
            android:visibility="gone" />
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>