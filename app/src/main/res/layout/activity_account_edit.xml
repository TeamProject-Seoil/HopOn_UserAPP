<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="#4285F4"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="36dp"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/account_back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="뒤로가기"
                android:src="@drawable/ic_back"
                android:background="@android:color/transparent"
                android:layout_gravity="start|center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="계정 정보 수정"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>

        <!-- 프로필 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/circle_mask"/>
            </LinearLayout>
        </FrameLayout>

        <!-- 입력 필드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 아이디 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="아이디"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 새 비밀번호 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="새 비밀번호"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ✅ 비밀번호 제약 조건 표시 -->
            <TextView
                android:id="@+id/password_rules1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 비밀번호는 10~16자, 영문/숫자 조합, 공백 불가"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:paddingStart="4dp"/>

            <TextView
                android:id="@+id/password_rules2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 영문 대문자, 소문자, 숫자 중 2종류 혼합(특수문자 불가)"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:paddingStart="4dp"/>

            <TextView
                android:id="@+id/password_rules3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• 3자리 연속된 키보드 상 문제, 숫자열은 제한"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:paddingStart="4dp"/>

            <!-- 새 비밀번호 확인 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호 확인"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="12dp">
                <!-- ... 비밀번호 확인 TextInputLayout 바로 아래에 추가하세요 -->
                <TextView
                    android:id="@+id/tv_pw_match_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"
                android:paddingStart="4dp"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이름 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="이름"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 이메일 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="이메일 아이디"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@"
                    android:textSize="16sp"
                    android:paddingHorizontal="4dp"/>

                <!-- ✅ 도메인 선택/직접입력 전환 -->
                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <!-- 스피너 -->
                    <Spinner
                        android:id="@+id/spinner_email_domain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"/>

                    <!-- 직접 입력 wrapper -->
                    <LinearLayout
                        android:id="@+id/custom_domain_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/editTextDomainCustom"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="도메인 입력"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/edittext_outline"/>

                        <ImageButton
                            android:id="@+id/btn_back_to_spinner"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:background="@android:color/transparent"
                            android:contentDescription="스피너로 돌아가기"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- 인증 발송 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end">   <!-- ✅ 오른쪽 정렬 -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증 메일 발송"
                    android:backgroundTint="#4285F4"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button"/>
            </LinearLayout>

            <!-- ✅ 인증 남은 시간 표시 -->
            <TextView
                android:id="@+id/text_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="남은 시간: -"
                android:textColor="#FF4444"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:layout_marginTop="4dp"/>

            <!-- 인증 코드 입력 + 확인 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="인증코드"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/code_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="확인"
                    android:backgroundTint="#4285F4"
                    android:textColor="@android:color/white"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- 전화번호 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="전화번호"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- 수정 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수정"
            android:layout_margin="16dp"
            android:backgroundTint="#4285F4"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"/>
    </LinearLayout>
</ScrollView>
