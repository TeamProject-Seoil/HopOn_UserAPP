<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_white_card">

    <!-- 상단 아이콘 -->
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_bus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 제목: 승차 확인 / 하차 확인 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="승차를 확인해주세요"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#111827"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp" />

    <!-- 노선명 -->
    <TextView
        android:id="@+id/tvRouteName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7016 (간선)"
        android:textSize="14sp"
        android:textColor="#4B5563"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- 정류장 이름 -->
    <TextView
        android:id="@+id/tvStopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="강남역 정류장에서 승차하셨나요?"
        android:textSize="16sp"
        android:textColor="#111827"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 설명 문구 -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20초 안에 확인하지 않으면 예약이 자동으로 취소됩니다."
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvStopName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 카운트다운 -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20초 남음"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#DC2626"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvMessage"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvCountdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 닫기/나중에 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLater"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="나중에"
            android:textSize="15sp"
            app:cornerRadius="14dp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp"/>

        <!-- 확인 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="네, 탑승했어요"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:cornerRadius="14dp"
            app:backgroundTint="#4B93FF"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
