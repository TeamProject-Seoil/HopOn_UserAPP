<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_find_id_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 이름 라벨 -->
    <TextView
        android:id="@+id/Name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:text="이름"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이름 입력 -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="이름 입력"
        android:background="@drawable/edittext_outline"
        app:layout_constraintTop_toBottomOf="@id/Name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 구분선 -->
    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이메일 찾기 라벨 -->
    <TextView
        android:id="@+id/fine_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:text="이메일로 찾기"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 이메일 입력 (아이디 + 도메인 Spinner/직접 입력 전환) -->
    <LinearLayout
        android:id="@+id/email_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/fine_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 이메일 아이디 -->
        <EditText
            android:id="@+id/et_email_id"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="이메일 아이디"
            android:background="@drawable/edittext_outline"
            android:inputType="textEmailAddress"/>

        <!-- @ 표시 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center"
            android:paddingHorizontal="4dp"
            android:text="@"
            android:textSize="16sp"/>

        <!-- 도메인 선택 영역 -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="56dp">

            <!-- 스피너 -->
            <Spinner
                android:id="@+id/spinner_email_domain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_outline"/>

            <!-- 직접 입력 영역 -->
            <LinearLayout
                android:id="@+id/custom_domain_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_email_domain_custom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="직접 입력"
                    android:background="@drawable/edittext_outline"
                    android:inputType="textEmailAddress"/>

                <ImageButton
                    android:id="@+id/btn_back_to_spinner"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:background="@android:color/transparent"
                    android:contentDescription="돌아가기"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- 인증 요청 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_send_code"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/main_blue_color"
        android:text="인증번호 발송"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/email_input_layout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 남은 시간 표시 -->
    <TextView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="⏱ 10:00"
        android:textColor="#FF0000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/btn_send_code"
        app:layout_constraintStart_toStartOf="@id/email_input_layout"/>

    <!-- 인증코드 입력 -->
    <EditText
        android:id="@+id/code_input"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="140dp"
        android:hint="인증코드 입력"
        android:inputType="number"
        android:background="@drawable/edittext_outline"
        app:layout_constraintTop_toBottomOf="@id/text_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 인증 확인 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/check_code"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginEnd="32dp"
        android:text="확인"
        android:background="@drawable/main_blue_color"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/code_input"
        app:layout_constraintBottom_toBottomOf="@id/code_input"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 아이디 찾기 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_find_id_result"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/main_blue_color"
        android:text="아이디 찾기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/code_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
